# =============================================================================
# stoat-and-ferret Environment Configuration
# =============================================================================
# Copy this file to .env and adjust values as needed:
#   cp .env.example .env
#
# All variables use the STOAT_ prefix. Environment variables set in the shell
# take precedence over values in .env.
# See docs/setup/04_configuration.md for full documentation.

# --- Database ----------------------------------------------------------------

# Path to the SQLite database file (relative paths resolve from working directory)
STOAT_DATABASE_PATH=data/stoat.db

# --- API Server --------------------------------------------------------------

# Host address the API server binds to (use 0.0.0.0 to listen on all interfaces)
STOAT_API_HOST=127.0.0.1

# Port number for the API server (valid range: 1-65535)
STOAT_API_PORT=8000

# --- Development / Debug -----------------------------------------------------

# Enable debug mode (accepts: true, false, 1, 0, yes, no)
STOAT_DEBUG=false

# Logging level (one of: DEBUG, INFO, WARNING, ERROR, CRITICAL)
STOAT_LOG_LEVEL=INFO

# --- Logging -----------------------------------------------------------------

# Number of rotated log file backups to keep (0 = no backups)
STOAT_LOG_BACKUP_COUNT=5

# Maximum log file size in bytes before rotation (default: 10 MB)
STOAT_LOG_MAX_BYTES=10485760

# --- Storage -----------------------------------------------------------------

# Directory for storing generated video thumbnails (created automatically)
STOAT_THUMBNAIL_DIR=data/thumbnails

# --- Frontend ----------------------------------------------------------------

# Path to the built frontend assets directory (served at /gui/)
STOAT_GUI_STATIC_PATH=gui/dist

# --- WebSocket ---------------------------------------------------------------

# WebSocket heartbeat interval in seconds (minimum: 1)
STOAT_WS_HEARTBEAT_INTERVAL=30

# --- Security ----------------------------------------------------------------

# Allowed root directories for media file scanning (JSON array)
# Empty list = all directories allowed
# Example: STOAT_ALLOWED_SCAN_ROOTS=["/home/user/videos", "/mnt/media"]
STOAT_ALLOWED_SCAN_ROOTS=
